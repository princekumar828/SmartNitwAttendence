<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainback"
    android:orientation="vertical"
    tools:context=".Login">

    <!-- App Header -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="57dp">

        <TextView
            android:id="@+id/appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/amiko"
            android:text="Nitw.Attendance"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/sd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="31dp"
            android:background="@drawable/bar_nav"
            android:orientation="horizontal" />
    </LinearLayout>



    <!-- Username Input -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="30dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/amiko"
            android:text="Welcome Back!"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/amiko"
            android:text="Login to continue"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/amiko"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    <EditText
        android:id="@+id/signinloginet"
        android:layout_width="283dp"
        android:layout_height="44dp"
        android:padding="12dp"
        android:textColor="#102C57"
        android:inputType="textEmailAddress"
        android:layout_gravity="left"
        android:layout_marginBottom="24dp"
        android:background="@drawable/inputbox" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/amiko"
            android:text="Password"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/signinpasset"
            android:layout_width="283dp"
            android:layout_height="44dp"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_gravity="left"
            android:textColor="#102C57"
            android:layout_marginBottom="24dp"
            android:background="@drawable/inputbox" />

        <TextView
            android:id="@+id/forgetpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/amiko"
            android:text="Forget password?"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>



    <!-- Forgot Password -->


    <!-- Login Button -->
    <RelativeLayout
        android:layout_width="330dp"
        android:id="@+id/loginbtn"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:background="@drawable/signbtn">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/amiko"
            android:text="Login"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amiko"
            android:text="Donâ€™t have an account?"
            android:textColor="@color/white"></TextView>

        <TextView
            android:id="@+id/gotosignup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/amiko"
            android:text="Sign Up"
            android:textColor="#DAC0A3">

        </TextView>
    </LinearLayout>
</LinearLayout>